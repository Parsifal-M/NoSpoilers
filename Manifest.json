{

  "manifest_version": 2,
  "name": "NoSpoilers!",
  "version": "1.0",

  "description": "Hides tecommended videos on Youtube as they always contain spoilers",
  "homepage_url": "",

  "icons": {
    "48": "iconfinder_42-Wrong_3672675.png"
    
  },
  
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["NoSpoilers.js"]
    }
  ],
  
  "browser_action": {
    "default_icon": "iconfinder_42-Wrong_3672675.png",
    "default_title": "NoSpoilers!"
  }
}
